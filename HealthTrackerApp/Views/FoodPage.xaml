<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthTrackerApp.Views.FoodPage"
             xmlns:viewmodel="clr-namespace:HealthTrackerApp.ViewModels"
             Title="Lisa Toit"
             BackgroundColor="#E1BEE7">

    <ContentPage.BindingContext>
        <viewmodel:FoodViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Pealkiri -->
            <Label Text="ðŸŽ Lisa uus toidu sissekanne" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="#4A148C"/>

            <!-- Sisestusvorm -->
            <Frame CornerRadius="15" 
                   BackgroundColor="#F3E5F5" 
                   BorderColor="#E1BEE7"
                   Padding="20">
                <VerticalStackLayout Spacing="15">

                    <!-- Toidu nimi -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Toidu nimi" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#4A148C"/>
                        <Entry Text="{Binding FoodName}" 
                               Placeholder="Nt: Ã•un, vÃµileib, salat..."
                               BackgroundColor="#F5F5F5"
                               TextColor="#212121"
                               ClearButtonVisibility="WhileEditing"/>
                    </VerticalStackLayout>

                    <!-- Kogus -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Kogus" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#37474F"/>
                        <Entry Text="{Binding Amount}" 
                               Placeholder="Nt: 1 tk, 200 g, 2 spl..."
                               BackgroundColor="#F5F5F5"
                               TextColor="#212121"
                               ClearButtonVisibility="WhileEditing"/>
                    </VerticalStackLayout>

                    <!-- Kalorid -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Kalorid (kcal)" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#37474F"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry Grid.Column="0" 
                                   Text="{Binding Calories}"
                                   Placeholder="0"
                                   Keyboard="Numeric"
                                   BackgroundColor="#F5F5F5"
                                   TextColor="#212121"/>
                            <Label Grid.Column="1" 
                                   Text="kcal" 
                                   FontSize="14"
                                   TextColor="#757575"
                                   VerticalOptions="Center"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Kategooria -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Kategooria" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#37474F"/>
                        <Picker Title="Vali kategooria..."
                                ItemsSource="{Binding Categories}"
                                SelectedItem="{Binding SelectedCategory}"
                                BackgroundColor="#F5F5F5"
                                TextColor="#212121">
                            <Picker.ItemDisplayBinding>
                                <Binding Path="."/>
                            </Picker.ItemDisplayBinding>
                        </Picker>
                    </VerticalStackLayout>

                    <!-- Lisa nupp -->
                    <Button Text="âœ… Lisa toit" 
                            Command="{Binding AddFoodCommand}"
                            BackgroundColor="#9C27B0"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="50"
                            Margin="0,10,0,0"/>

                </VerticalStackLayout>
            </Frame>

            <!-- Kiired valikud -->
            <Frame CornerRadius="15" 
                   BackgroundColor="#F3E5F5" 
                   BorderColor="#E1BEE7"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="âš¡ Kiired valikud" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#4A148C"/>

                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10">
                        <Button Grid.Column="0" 
                                Text="ðŸŽ Ã•un"
                                Command="{Binding QuickAddCommand}"
                                CommandParameter="apple"
                                BackgroundColor="#E1BEE7"
                                TextColor="#4A148C"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <Button Grid.Column="1" 
                                Text="ðŸŒ Banaan"
                                Command="{Binding QuickAddCommand}"
                                CommandParameter="banana"
                                BackgroundColor="#E1BEE7"
                                TextColor="#4A148C"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <Button Grid.Column="2" 
                                Text="ðŸ¥ª VÃµileib"
                                Command="{Binding QuickAddCommand}"
                                CommandParameter="sandwich"
                                BackgroundColor="#E1BEE7"
                                TextColor="#4A148C"
                                CornerRadius="8"
                                HeightRequest="50"/>

                        <Button Grid.Column="3" 
                                Text="ðŸ  Lao vaade"
                                Command="{Binding OpenPantryCommand}"
                                BackgroundColor="#EDE7F6"
                                TextColor="#4527A0"
                                CornerRadius="8"
                                HeightRequest="50"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- TÃ¤nased sissekanded -->
            <Frame CornerRadius="15" 
                   BackgroundColor="#F3E5F5" 
                   BorderColor="#E1BEE7"
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="ðŸ“… TÃ¤nased sissekanded" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="#4A148C"/>

                    <CollectionView ItemsSource="{Binding TodayFoodEntries}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="10" 
                                       BackgroundColor="#E1BEE7" 
                                       BorderColor="#CE93D8"
                                       Padding="15"
                                       Margin="0,0,0,8">
                                    <Grid ColumnDefinitions="*,Auto,Auto" 
                                          RowSpacing="5">
                                        <VerticalStackLayout Grid.Column="0" 
                                                             Spacing="3">
                                            <Label Text="{Binding FoodName}" 
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#4A148C"/>
                                            <Label Text="{Binding Amount}" 
                                                   FontSize="12"
                                                   TextColor="#6A1B9A"/>
                                        </VerticalStackLayout>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Calories, StringFormat='{0} kcal'}" 
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="#4A148C"
                                               VerticalOptions="Center"
                                               Margin="10,0,0,0"/>
                                        <Button Grid.Column="2" 
                                                Text="ðŸ—‘ï¸"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:FoodViewModel}}, 
                                                                  Path=DeleteFoodCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="Transparent"
                                                TextColor="#F44336"
                                                FontSize="16"
                                                WidthRequest="40"/>
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label Text="{Binding TodayFoodEntries.Count, StringFormat='Kokku: {0} sissekannet'}" 
                           FontSize="14"
                           TextColor="#757575"
                           HorizontalOptions="Center"/>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>